{
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "esbuild": "^0.14.25",
    "fixpack": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prism-themes": "^1.9.0",
    "sanitize.css": "^13.0.0",
    "textlint": "^12.1.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0"
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  },
  "lint-staged": {
    "*.+(css|js|md|yml)": "prettier --check",
    "*.md": "textlint --dry-run",
    "package.json": "fixpack --dryRun",
    "package-lock.json": "node -e 'process.exitCode = 1;'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "scripts": {
    "attach:gh-pages": "git worktree add ./docs gh-pages",
    "build": "run-s build:*",
    "build:css": "esbuild ./src/index.css --bundle --minify --watch --outfile=./public/index.css",
    "build:eleventy": "npx @11ty/eleventy",
    "clean": "node -e 'fs.rmSync(`./public`, { force: true, recursive: true })'",
    "deploy": "run-s build:*",
    "deploy:css": "NODE_ENV=production esbuild ./src/index.css --bundle --minify --watch --outfile=./docs/index.css",
    "deploy:eleventy": "NODE_ENV=production npx @11ty/eleventy --output=./docs",
    "detach:gh-pages": "git worktree remove ./docs",
    "fix": "run-s fix:*",
    "fix:fixpack": "fixpack",
    "fix:prettier": "prettier --write './**/*.+(css|js|md|yml)'",
    "fix:textlint": "textlint --fix './src/**/*.md'",
    "lint": "run-s lint:*",
    "lint:eleventy": "npx @11ty/eleventy --dryrun",
    "lint:fixpack": "fixpack --dryRun",
    "lint:prettier": "prettier --check './**/*.+(css|js|md|yml)'",
    "lint:textlint": "textlint --dry-run './src/**/*.md'",
    "predeploy": "cd ./docs && git clean -dfx && git rm -rf --ignore-unmatch .",
    "prepare": "[ -n \"$CI\" ] || husky install",
    "serve": "run-p -l serve:*",
    "serve:css": "esbuild ./src/index.css --bundle --watch --outfile=./public/index.css",
    "serve:eleventy": "npx @11ty/eleventy --serve"
  },
  "textlint": {
    "rules": {
      "preset-ja-technical-writing": true,
      "ja-technical-writing/ja-no-weak-phrase": false,
      "ja-technical-writing/sentence-length": false
    }
  }
}
